{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Template details Configuration Schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The JSON schema version."
    },
    "type": {
      "type": "string",
      "enum": [
        "standard",
        "blueprint"
      ],
      "description": "Type of dashboard, which can be either 'standard' or 'blueprint'."
    },
    "use_mock": {
      "type": "boolean",
      "description": "Flag to indicate if the template should use mock data."
    },
    "setup": {
      "type": "object",
      "description": "Object containing the setup of devices or analysis information for the template.",
      "properties": {
        "analysis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Analysis ID to be replaced in the template installation."
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name",
              "description"
            ],
            "additionalProperties": false
          }
        },
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Device ID to be replaced in the template installation. This ID must the included in widget object"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name",
              "description"
            ],
            "additionalProperties": false
          }
        },
        "blueprints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Blueprint ID to be replaced in the template installation."
              },
              "type": {
                "type": "string",
                "enum": [
                  "device",
                  "entity"
                ],
                "description": "Type of resource to be replaced in the template installation."
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "conditions": {
                "type": "array",
                "description": "Array of condition objects. Must contain at least one condition.",
                "items": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "Key for the condition."
                    },
                    "value": {
                      "type": "string",
                      "description": "Value for the condition."
                    }
                  },
                  "required": [
                    "key",
                    "value"
                  ],
                  "additionalProperties": false
                },
                "minItems": 1
              },
              "filter_conditions": {
                "type": "array",
                "description": "Array of filter condition objects. Optional.",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Type of the filter condition.",
                      "enum": [
                        "tag_match"
                      ]
                    },
                    "tag_key": {
                      "type": "string",
                      "description": "Key for the tag to match."
                    },
                    "blueprint_device": {
                      "type": "string",
                      "description": "Blueprint device name."
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "type",
                    "tag_key",
                    "blueprint_device"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "id",
              "name",
              "description",
              "conditions"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "type",
    "use_mock",
    "setup"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "standard"
          }
        }
      },
      "then": {
        "properties": {
          "setup": {
            "required": [
              "devices"
            ],
            "not": {
              "required": [
                "blueprints"
              ]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "blueprint"
          }
        }
      },
      "then": {
        "properties": {
          "setup": {
            "required": [
              "blueprints"
            ],
            "not": {
              "required": [
                "devices"
              ]
            }
          }
        }
      }
    }
  ]
}
